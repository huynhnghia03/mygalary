generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Photo {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int
  width        Int?
  height       Int?
  path         String
  url          String
  isFavorite   Boolean  @default(false)
  uploadedAt   DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("photos")
}